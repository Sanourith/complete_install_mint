{
    // === APPARENCE & THÈME - NIVEAU DIEU ===
    "workbench.colorTheme": "GitHub Dark High Contrast",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "fluent-icons",
    "window.titleBarStyle": "custom",
    "window.commandCenter": true,
    "workbench.layoutControl.enabled": false,
    "workbench.welcomePage.walkthroughs.openOnInstall": false,
    "workbench.tips.enabled": false,
    "window.menuBarVisibility": "compact",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.iconClickBehavior": "toggle",

    // === CONFIGURATION GLOBALE DES TABS ===
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.fontFamily": "'Fira Code', 'JetBrains Mono', 'Cascadia Code PL', 'Source Code Pro', 'Consolas', monospace",
    "editor.fontSize": 13,
    "editor.fontWeight": "500",
    "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
    "editor.lineHeight": 1.7,
    "editor.letterSpacing": 0.3,
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorWidth": 3,
    "editor.smoothScrolling": true,
    "editor.mouseWheelZoom": true,
    "editor.padding.top": 16,
    "editor.padding.bottom": 16,

    // === ÉDITEUR - FEATURES AVANCÉES ===
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.rulers": [
        { "column": 80, "color": "#4CAF5030" },
        { "column": 100, "color": "#FF9800B0" },
        { "column": 120, "color": "#F4433650" }
    ],
    "editor.minimap.enabled": true,
    "editor.minimap.scale": 2,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 120,
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.maxLineCount": 5,
    "editor.guides.bracketPairs": "active",
    "editor.guides.indentation": true,
    "editor.guides.highlightActiveIndentation": "always",
    "editor.bracketPairColorization.enabled": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.inlayHints.enabled": "onUnlessPressed",
    "editor.linkedEditing": true,
    "editor.occurrencesHighlight": "multiFile",

    // === ÉDITEUR - SUGGESTIONS ULTRA ===
    "editor.suggest.preview": true,
    "editor.suggest.showIcons": true,
    "editor.suggest.filterGraceful": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.parameterHints.enabled": true,
    "editor.parameterHints.cycle": true,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.tabCompletion": "on",
    "editor.wordBasedSuggestions": "matchingDocuments",
    "editor.wordBasedSuggestionsMode": "currentDocument",

    // === WORKBENCH PREMIUM ===
    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "left",
    "workbench.panel.defaultLocation": "bottom",
    "workbench.panel.opensMaximized": "never",
    "workbench.editor.enablePreview": false,
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.tabSizing": "fit",
    "workbench.editor.tabCloseButton": "right",
    "workbench.editor.decorations.colors": true,
    "workbench.editor.decorations.badges": true,
    "workbench.startupEditor": "none",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 10,
    "workbench.editor.limit.excludeDirty": true,

    // === FICHIERS & SAUVEGARDE INTELLIGENTE ===
    "files.autoSave": "onFocusChange",
    "files.autoSaveDelay": 500,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.hotExit": "onExitAndWindowClose",
    "files.defaultLanguage": "plaintext",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/dist": true,
        "**/build": true,
        "**/.vscode": false
    },

    // === TERMINAL DE GUERRE ===
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "'JetBrains Mono', 'Fira Code', 'Cascadia Code PL', monospace",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.rightClickBehavior": "copyPaste",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.persistentSessionReviveProcess": "onExit",

    // === PYTHON MASTERCLASS ===
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.rulers": [88, 120]
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.completeFunctionParens": true,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.mypyEnabled": false,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "flake8.args": [
        "--max-line-length=88",
        "--ignore=E203,W503,E501",
        "--extend-ignore=F401"
    ],

    // === JAVASCRIPT/TYPESCRIPT PRO ===
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        }
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        }
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.wordWrap": "off"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.wordWrap": "off"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },

    // === CONFIGURATION SPÉCIFIQUE CSV ===
    "[csv]": {
        "editor.wordWrap": "off"
    },
    "[tsv]": {
        "editor.wordWrap": "off"
    },

    // === GIT NINJA ===
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.decorations.enabled": true,
    "git.showPushSuccessNotification": true,
    "git.suggestSmartCommit": false,
    "git.enableCommitSigning": false,
    "scm.diffDecorations": "all",
    "scm.diffDecorationsGutterVisibility": "hover",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,
    "diffEditor.wordWrap": "inherit",

    // === PERFORMANCES TURBO ===
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/__pycache__/**": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/.venv/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true,
        "**/dist": true,
        "**/build": true,
        "**/.venv": true
    },
    "search.followSymlinks": false,
    "search.smartCase": true,

    // === EXTENSIONS PREMIUM ===
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning",
        "info"
    ],
    "errorLens.fontFamily": "JetBrains Mono",
    "errorLens.fontSize": "11px",
    "errorLens.fontWeight": "400",

    "todo-tree.general.tags": [
        "BUG", "HACK", "FIXME", "TODO", "XXX", "OPTIMIZE",
        "NOTE", "REVIEW", "WARNING", "DEPRECATED",
        "[ ]", "[x]"
    ],
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "type": "tag-and-comment",
        "foreground": "#000000",
        "background": "#ffcc00",
        "opacity": 50,
        "iconColour": "#ffcc00",
        "fontWeight": "bold"
    },
    "todo-tree.highlights.customHighlight": {
        "BUG": {
            "icon": "bug",
            "foreground": "#ffffff",
            "background": "#e53e3e",
            "iconColour": "#e53e3e"
        },
        "HACK": {
            "icon": "tools",
            "foreground": "#ffffff",
            "background": "#f56500",
            "iconColour": "#f56500"
        },
        "NOTE": {
            "icon": "note",
            "foreground": "#ffffff",
            "background": "#3182ce",
            "iconColour": "#3182ce"
        }
    },

    // === INDENTATION RAINBOW PREMIUM ===
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 2,
    "indentRainbow.colors": [
        "rgba(64,196,255,0.1)",
        "rgba(127,255,127,0.1)",
        "rgba(255,127,255,0.1)",
        "rgba(255,196,64,0.1)",
        "rgba(255,127,127,0.1)",
        "rgba(127,255,255,0.1)"
    ],
    "indentRainbow.errorColor": "rgba(255,64,64,0.3)",
    "indentRainbow.tabmixColor": "rgba(255,196,64,0.4)",

    // === THÈME CUSTOM COLORS ===
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#61dafb",
        "terminalCursor.foreground": "#61dafb",
        "editor.selectionBackground": "#b0b89d9c",
        "editor.selectionHighlightBackground": "#264f7820",
        "editor.wordHighlightBackground": "#575757B0",
        "editor.wordHighlightStrongBackground": "#004972B0",
        "editorBracketMatch.background": "#264f7840",
        "editorBracketMatch.border": "#61dafb",
        "tab.activeBorder": "#61dafb",
        "statusBar.background": "#282c34",
        "statusBar.foreground": "#abb2bf",
        "activityBar.activeBorder": "#61dafb",
        "list.activeSelectionBackground": "#264f7840",
        "list.hoverBackground": "#264f7820"
    },

    // === BREADCRUMBS ADVANCED ===
    "breadcrumbs.enabled": true,
    "breadcrumbs.showKeys": true,
    "breadcrumbs.showFiles": true,
    "breadcrumbs.showSymbols": true,
    "breadcrumbs.symbolSortOrder": "type",
    "breadcrumbs.showArrays": true,
    "breadcrumbs.showBooleans": true,
    "breadcrumbs.showClasses": true,
    "breadcrumbs.showConstants": true,
    "breadcrumbs.showConstructors": true,

    // === DEBUG & TESTING ===
    "debug.console.fontSize": 13,
    "debug.console.fontFamily": "JetBrains Mono",
    "debug.inlineValues": "on",
    "debug.showBreakpointsInOverviewRuler": true,
    "testing.openTesting": "neverOpen",

    // === SECURITY & TRUST ===
    "security.workspace.trust.untrustedFiles": "prompt",
    "security.workspace.trust.banner": "always",
    "security.workspace.trust.startupPrompt": "once",

    // === AUTRES OPTIMISATIONS AVANCÉES ===
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "editor.codeLens": true,
    "editor.codeLensFontFamily": "JetBrains Mono",
    "editor.codeLensFontSize": 11,
    "problems.decorations.enabled": true,
    "outline.showVariables": true,
    "outline.showFunctions": true,
    "outline.showClasses": true,
    "outline.problems.enabled": true,
    "outline.problems.colors": true,
    "outline.problems.badges": true,

    // === PERFORMANCE BOOSTS ===
    "extensions.ignoreRecommendations": false,
    "telemetry.telemetryLevel": "off",
    "update.mode": "manual",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "npm.fetchOnlinePackageInfo": false,

    // === ZOOM & ACCESSIBILITÉ PRO ===
    "window.zoomLevel": 0,
    "editor.accessibilitySupport": "auto",
    "workbench.reduceMotion": "off",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",

    // === PREVIEW & MARKDOWN ===
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "markdown.preview.fontSize": 14,
    "markdown.preview.fontFamily": "system-ui, -apple-system, sans-serif",
    "workbench.editor.tabActionLocation": "right",
    "testing.automaticallyOpenTestResults": "neverOpen",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false
}
